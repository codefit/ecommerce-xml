{
    "name": "codefit/ecommerce-xml",
    "description": "Generátor XML feedů pro Zboží CZ, Heureka CZ, Heureka SK a Google Merchant",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Feeds\\XmlGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Feeds\\XmlGenerator\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "spatie/array-to-xml": "^3.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0"
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true
} 